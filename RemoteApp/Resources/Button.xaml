            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent" x:Name="bord" Width="16" Height="16" CornerRadius="10">
                        <ContentPresenter VerticalAlignment="Center">
                            <ContentPresenter.Content>
